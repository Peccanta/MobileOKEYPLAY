<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/cartgameBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cartgameImage"
                android:layout_width="87dp"
                android:layout_height="110dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/g1" />

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cartgameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Hogwatrs Legacy"
                    android:textColor="@color/white"
                    android:textSize="21dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cartgameGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:text="Action"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/cartgameDelim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:text="|"
                        android:translationY="-0.5dp"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/cartgameDev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu"
                        android:text="Steam"
                        android:textColor="@color/white"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/deleteFromCart"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5.5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:textAlignment="textEnd"
                    android:translationX="68dp"
                    android:translationY="-24dp"
                    app:srcCompat="@drawable/delete" />

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="-7dp"
                    android:translationX="-1dp">

                    <ImageButton
                        android:id="@+id/plusCart"
                        android:background="@android:color/transparent"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/plus" />

                    <TextView
                        android:id="@+id/cartgameCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="21dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAlignment="center"
                        android:text="1" />

                    <ImageButton
                        android:id="@+id/minusCart"
                        android:background="@android:color/transparent"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/minus" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/cartgamePrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_medium"
            android:text="1999"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:translationY="75dp"
            android:translationX="90dp"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/cartgamePriceRub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="101dp"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_medium"
            android:text="â‚½"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:translationY="75dp"
            android:translationX="90dp"
            android:textSize="21dp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>